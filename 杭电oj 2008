#include<stdio.h>
int main()
{
    int n,i;
    while(scanf("%d",&n)!=EOF)
    {
        double t[1000];
        int a,b,c;
        l=q=h=0;
        if(n!=0)
        {
            for(i=0;i<n;i++)
            {
              scanf("%lf",&t[i]);
              if(t[i]<0)
              {
                l++;
              }
              else if(t[i]==0)
              {
                 q++;
              }
              else
              {
                h++;
              }
            }
          printf("%d %d %d\n",l,q,h);
        }
    }
      
      return 0;
}

